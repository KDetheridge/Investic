<?xml version="1.0" encoding="utf-8" ?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.example.investic.ui.portfolio.CompanyPortfolioView"

        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:layout_marginTop="3pt"
        android:layout_marginBottom="2pt"
        android:id="@+id/company_portfolio_cardview"
        >
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:orientation="horizontal"

            android:layout_gravity="center_horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5pt"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="match_parent"

                    android:orientation="vertical">
                    <TextView
                        android:layout_width="175sp"
                        android:layout_height="14sp"
                        android:text="AAPL"
                        android:id="@+id/company_ticker"
                        android:textSize="12sp"
                        android:textColor="@color/gray_400"/>
                    <TextView
                        android:layout_width="175sp"
                        android:layout_height="30sp"
                        android:text="Apple Inc."
                        android:id="@+id/company_name"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="175sp"
                        android:layout_height="20sp"
                        android:text="Technology Consulting"
                        android:id="@+id/company_sector"
                        android:textSize="12sp" />


                    <LinearLayout
                        android:layout_width="80pt"
                        android:layout_height="22pt"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:text="$20.23"
                            android:textAlignment="textStart"
                            android:id="@+id/last_sale_price"
                            android:textSize="14sp" />


                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="28pt"
                    android:layout_height="match_parent"

                    android:orientation="vertical"
                    android:layout_gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_gravity="center"
                    android:text="Ethical Score"
                    android:textAlignment="center"
                    android:layout_marginTop="20sp"
                    android:id="@+id/ethical_score_label"
                    android:textSize="12sp" >

                </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20sp"
                        android:layout_gravity="center"
                        android:text="N/A"
                        android:textAlignment="center"
                        android:id="@+id/ethical_score_value"
                        android:textSize="12sp" ></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="28pt"
                    android:layout_height="40pt"

                    android:orientation="vertical"
                    android:layout_gravity="center"
                    >

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="24pt"
                        android:layout_height="24pt"
                        android:layout_marginTop="2sp"
                        android:layout_gravity="center_horizontal"
                        android:background="@android:color/transparent"
                        android:drawableBottom="@drawable/ic_baseline_playlist_add_circle_24"
                        android:drawableTint="#058300"

                        android:textAlignment="center"

                        android:textSize="3sp"


                        />

                    <TextView

                        android:layout_width="24pt"
                        android:layout_height="30sp"
                        android:layout_gravity="center_horizontal"
                        android:text="Add to Portfolio"
                        android:textAlignment="center"
                        android:textSize="9sp" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

