<?xml version="1.0" encoding="utf-8" ?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.example.investic.ui.home.HomeFragment"

        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:layout_marginTop="3pt"
        android:layout_marginBottom="2pt"
        android:id="@+id/company_cardview"
        >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="70sp"


        android:orientation="horizontal"

        android:layout_gravity="center_horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5pt"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AAPL"
                    android:id="@+id/company_ticker"
                    android:textSize="12sp"
                    android:textColor="@color/gray_400"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apple Inc."
                    android:id="@+id/company_name"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Technology Consulting"
                    android:id="@+id/company_sector"
                    android:textSize="12sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="0pt"
                android:layout_weight="0.25"
                android:layout_height="match_parent"

                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/stock_price_value"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:text="$00.00"
                    android:gravity="center"
                    android:textAlignment="center"

                    android:textSize="20sp">

                </TextView>
                <TextView
                    android:id="@+id/price_change_value"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:text="+0.00">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0pt"
                android:layout_weight="0.1"
                android:layout_marginTop="12sp"
                android:layout_height="match_parent"

                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:text="Ethical Score"
                    android:textAlignment="center"
                    android:id="@+id/ethical_score_label"
                    android:textSize="12sp" >

                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="0.4"
                    android:layout_gravity="center"
                    android:text="N/A"
                    android:textAlignment="center"
                    android:id="@+id/ethical_score_value"
                    android:textSize="12sp" ></TextView>
            </LinearLayout>



            <LinearLayout
                android:layout_width="0sp"
                android:layout_weight="0.15"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/add_portfolio_section">



                <Button
                    android:id="@+id/add_portfolio_button"

                    android:layout_width="wrap_content"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/add_portfolio_text"
                    android:backgroundTint="#058300"
                    android:textAlignment="center"
                    android:textSize="8sp" />
            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>

