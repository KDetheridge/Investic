<?xml version="1.0" encoding="utf-8" ?>    <androidx.cardview.widget.CardView        xmlns:android="http://schemas.android.com/apk/res/android"        xmlns:tools="http://schemas.android.com/tools"        tools:context="com.example.investic.ui.portfolio.CompanyPortfolioView"        android:layout_width="match_parent"        android:layout_height="50sp"        android:layout_marginTop="3pt"        android:layout_marginBottom="2pt"        android:id="@+id/company_portfolio_cardview"        >        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:orientation="horizontal"            android:layout_gravity="center_horizontal"            >            <ImageView                android:layout_width="30pt"                android:layout_height="match_parent"                android:layout_gravity="center_vertical"                android:contentDescription="Company Logo"                android:src="@drawable/ic_baseline_playlist_add_circle_24"                >            </ImageView>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:paddingLeft="5pt"                android:orientation="horizontal">                <LinearLayout                    android:layout_width="260dp"                    android:layout_height="match_parent"                    android:orientation="vertical">                    <TextView                        android:layout_width="250sp"                        android:layout_height="24sp"                        android:text="Capgemini"                        android:id="@+id/company_name"                        android:textSize="15sp" />                    <TextView                        android:layout_width="250sp"                        android:layout_height="40sp"                        android:text="Technology Consulting"                        android:id="@+id/company_category"                        android:textSize="12sp" />                    <LinearLayout                        android:layout_width="80pt"                        android:layout_height="22pt"                        android:orientation="horizontal">                        <ImageView                            android:layout_width="22pt"                            android:layout_height="22pt"                            android:layout_marginRight="3pt"                            android:background="@color/light_blue_400" />                        <ImageView                            android:layout_width="22pt"                            android:layout_height="22pt"                            android:layout_marginRight="3pt"                            android:background="@color/purple_700" />                        <ImageView                            android:layout_width="22pt"                            android:layout_height="22pt"                            android:layout_marginRight="3pt"                            android:background="@color/teal_700" />                    </LinearLayout>                </LinearLayout>                <LinearLayout                    android:layout_width="28pt"                    android:layout_height="40pt"                    android:orientation="vertical"                    android:layout_gravity="center"                    >                    <androidx.appcompat.widget.AppCompatButton                        android:layout_width="18pt"                        android:layout_height="24pt"                        android:layout_gravity="center_horizontal"                        android:background="@android:color/transparent"                        android:drawableBottom="@drawable/ic_baseline_playlist_add_circle_24"                        android:drawableTint="#058300"                        android:textAlignment="center"                        android:textSize="3sp"                        />                    <TextView                        android:layout_width="24pt"                        android:layout_height="30sp"                        android:layout_gravity="center_horizontal"                        android:text="Add to Portfolio"                        android:textAlignment="center"                        android:textSize="9sp" />                </LinearLayout>            </LinearLayout>        </LinearLayout>    </androidx.cardview.widget.CardView>