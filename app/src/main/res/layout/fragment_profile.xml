<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.ProfileFragment">
    <Button
        android:id="@+id/updateProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Profile"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="1600px"
        android:layout_gravity="center_vertical">


            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:paddingBottom="100sp">
                    <TextView
                        android:id="@+id/investmentAmountValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="40sp"
                        android:text="5000.00"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/investmentAmountLabel"

                        android:text="Invested"
                        android:textAlignment="center"
                        android:textSize="30sp"

                        android:layout_gravity="center_horizontal"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">
                <LinearLayout
                    android:layout_width="500px"
                    android:layout_height="500px"
                    android:orientation="vertical"


                    >
                    <TextView
                        android:id="@+id/investmentScrutinyValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:text="5"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:id="@+id/investmentScrutinyLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="Scrutiny Level"
                        android:layout_gravity="center_horizontal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="500px"
                    android:layout_height="500px"
                    android:orientation="vertical"


                    >

                    <TextView
                        android:id="@+id/investmentRiskValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="5"
                        android:textAlignment="center"
                        android:textSize="30sp" />
                        <TextView
                            android:id="@+id/investmentRiskLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="Risk Level"
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal" />
                </LinearLayout>
                </LinearLayout>


                </LinearLayout>





    </GridLayout>


</FrameLayout>